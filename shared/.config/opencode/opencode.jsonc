{
	"$schema": "https://opencode.ai/config.json",
	"model": "anthropic/claude-sonnet-4-5-20250929",
	"small_model": "anthropic/claude-haiku-4-5",
	"layout": "stretch",
	"keybinds": {
		"leader": "ctrl+o"
	},
	"agent": {
		"plan": {
			"mode": "primary",
			"model": "anthropic/claude-sonnet-4-5-20250929",
			"permission": {
				"bash": {
					"cat *": "allow",
					"jj *": "allow",
					"git *": "deny",
					"ls *": "allow",
					"head *": "allow",
					"tail *": "allow",
					"find *": "allow",
					"fd *": "allow",
					"grep *": "allow",
					"rg *": "allow",
					"xargs *": "allow"
				}
			},
			"tools": {
				"write": false,
				"edit": false,
				"bash": true
			}
		}
	},
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp"
		},
		"bear": {
			"type": "local",
			"command": [
				"~/.local/bin/bear-mcp.py"
			]
		}
	}
}
